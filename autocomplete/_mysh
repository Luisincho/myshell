#compdef mysh

local -a subcommands
subcommands=(
  'update:Update the mysh script repository'
  'description:Show the description of a command'
  'list:List all available commands'
  'md:Print the list of commands in markdown format'
  'md2doc:Export the list of commands to a markdown file'
  'commands:View the list of commands'
  'help:View the script documentation'
  'create:Create a new command file'
)

_arguments -s \
  '1: :->subcommands' \
  '*:: :->args'

case $state in
  subcommands)
    _describe 'subcommand' subcommands
    ;;
  args)
    ;;
esac
