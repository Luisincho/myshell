#!/usr/bin/env sh

# Description: Get all headers, status or location of an url.

get_headers() {
    curl --silent --show-error --connect-timeout 5 -I "$1"
}

status() {
    get_headers "$1" | head -n1 | cut -d' ' -f2
}

location() {
    get_headers "$1" | grep -i location: | cut -d' ' -f2-
}

if [ -z "$2" ]; then
    get_headers "$1"
    exit
fi

eval "$1 $2"
